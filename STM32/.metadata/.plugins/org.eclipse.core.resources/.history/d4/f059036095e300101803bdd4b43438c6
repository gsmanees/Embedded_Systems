#include "oled.h"
#include <stdint.h>
#include "stm32f446xx_i2c_driver.h"

void I2C1_GPIO_Init(void)
{
    /* 1. Enable GPIOB clock */
    RCC->AHB1ENR |= (1 << 1);   // GPIOBEN

    /* 2. PB6 & PB7 → Alternate Function mode */
    GPIOB->MODER &= ~(3 << (6 * 2));
    GPIOB->MODER &= ~(3 << (7 * 2));
    GPIOB->MODER |=  (2 << (6 * 2));
    GPIOB->MODER |=  (2 << (7 * 2));

    /* 3. Output type → Open-drain */
    GPIOB->OTYPER |= (1 << 6);
    GPIOB->OTYPER |= (1 << 7);

    /* 4. High speed */
    GPIOB->OSPEEDR |= (3 << (6 * 2));
    GPIOB->OSPEEDR |= (3 << (7 * 2));

    /* 5. Pull-up */
    GPIOB->PUPDR &= ~(3 << (6 * 2));
    GPIOB->PUPDR &= ~(3 << (7 * 2));
    GPIOB->PUPDR |=  (1 << (6 * 2));
    GPIOB->PUPDR |=  (1 << (7 * 2));

    /* 6. Alternate function AF4 (I2C) */
    GPIOB->AFR[0] &= ~(0xF << (6 * 4));
    GPIOB->AFR[0] &= ~(0xF << (7 * 4));
    GPIOB->AFR[0] |=  (4 << (6 * 4));
    GPIOB->AFR[0] |=  (4 << (7 * 4));
}


int main(void)
{
	I2C1_GPIO_Init();
	I2C_Handle_t oled;
	OLED_Init(&oled);
	while(1)
	{
		OLED_Clear(&oled);
			OLED_PrintString(&oled, "anees kokadan");
			printf("Anees Kokadan");
	}




}

