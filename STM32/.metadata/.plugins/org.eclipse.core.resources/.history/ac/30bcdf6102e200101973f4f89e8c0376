




#include <stdio.h>
#include <stdint.h>
#include "stm32f446xx.h"
#include "stm32f446xx_gpio_driver.h"
#include "stm32f446xx_spi_driver.h"

/* ITM printf */
int _write(int file, char *ptr, int len)
{
    for (int i = 0; i < len; i++)
        ITM_SendChar(*ptr++);
    return len;
}

static void SPI1_GPIOInit(void)
{
    GPIO_Handle_t SPIPins;
    GPIO_PeriClockControl(GPIOA, ENABLE);

    SPIPins.pGPIOx = GPIOA;
    SPIPins.GPIO_PinConfig.GPIO_PinMode = GPIO_MODE_ALTFN;
    SPIPins.GPIO_PinConfig.GPIO_PinAltFunMode = GPIO_AF5;
    SPIPins.GPIO_PinConfig.GPIO_PinOPType = GPIO_OP_TYPE_PP;
    SPIPins.GPIO_PinConfig.GPIO_PinSpeed = GPIO_SPEED_HIGH;
    SPIPins.GPIO_PinConfig.GPIO_PinPuPdControl = GPIO_NO_PUPD;

    uint8_t pins[] = {4,5,6,7};
    for (int i = 0; i < 4; i++)
    {
        SPIPins.GPIO_PinConfig.GPIO_PinNumber = pins[i];
        GPIO_Init(&SPIPins);
    }
}

static void SPI1_SlaveInit(void)
{
    SPI_Handle_t SPIHandle;

    SPIHandle.pSPIx = SPI1;
    SPIHandle.SPIConfig.SPI_DeviceMode = SPI_DEVICE_MODE_SLAVE;
    SPIHandle.SPIConfig.SPI_BusConfig  = SPI_BUS_CONFIG_FD;
    SPIHandle.SPIConfig.SPI_DFF        = SPI_DFF_8BITS;
    SPIHandle.SPIConfig.SPI_CPOL       = SPI_CPOL_LOW;
    SPIHandle.SPIConfig.SPI_CPHA       = SPI_CPHA_LOW;
    SPIHandle.SPIConfig.SPI_SSM        = SPI_SSM_DI;

    SPI_PeriClockControl(SPI1, ENABLE);
    SPI_Init(&SPIHandle);
    SPI_PeripheralControl(SPI1, ENABLE);
}

int main(void)
{
    uint8_t rx;

    SPI1_GPIOInit();
    SPI1_SlaveInit();

    printf("STM32 SPI SLAVE READY\r\n");

    while (1)
    {
        /* Wait for byte */
        while (!(SPI1->SR & SPI_SR_RXNE));

        rx = SPI1->DR;

        /* Clear OVR safely */
        if (SPI1->SR & SPI_SR_OVR)
        {
            (void)SPI1->DR;
            (void)SPI1->SR;
        }

        /* Print only printable characters */
        if (rx >= 0x20 && rx <= 0x7E)
        {
            printf("%c", rx);
        }
    }
}










