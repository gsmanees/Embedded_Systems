#include <stdint.h>
#include "stm32_f446xx.h"

void ADC_init(void)
{
	RCC->AHB1ENR|=(1<<0);
	GPIOA->MODER|=(0X3<<0); // PA0 set as 11, for analog mode
	GPIOA->PUPDR&=~(0X3<<0); // No pull up, pull down

	RCC->APB2ENR|=(1<<8);  // ADC1 Clock enable

	// ADC configuration
	ADC1->CR2=0;
	ADC1->SQR3=0;
	ADC1->SMPR2|=(0X3<<0); // SAMPLING

	ADC1->CR2|=(1<<0);  // ADC ON
}

void ADC_Read(void)
{
	ADC1->CR2|=(1<<30);
	while (!(ADC1->SR&(1<<1)));
	return ADC1>DR;
}

int main(void)
{
    /* Loop forever */
	for(;;);
}
