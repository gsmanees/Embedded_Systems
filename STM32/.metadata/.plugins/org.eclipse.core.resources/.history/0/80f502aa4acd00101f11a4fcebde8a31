#include <stdint.h>
#include "stm32_f446xx.h"
#include<stdio.h>

void ADC_init(void)
{
	RCC->AHB1ENR|=(1<<0);
	GPIOA->MODER|=(0X3<<0); // PA0 set as 11, for analog mode
	GPIOA->PUPDR&=~(0X3<<0); // No pull up, pull down

	RCC->APB2ENR|=(1<<8);  // ADC1 Clock enable

	// ADC configuration
	ADC1->CR2=0;
	ADC1->SQR3=0;
	ADC1->SMPR2|=(0X3<<0); // SAMPLING

	ADC1->CR2|=(1<<0);  // ADC ON
}

uint16_t ADC_Read(void)
{
	ADC1->CR2|=(1<<30);			// SWSTART
	while (!(ADC1->SR&(1<<1)));	// wait until analog watchdog timer is set to 1
	return ADC1->DR;				// take the value from data register
}




int main(void)
{
    uint16_t adc;
    float voltage, temperature;

    ADC_init();

    while(1)
    {
    	adc=ADC_Read();
    	voltage=(adc * 3.3f) / 4095.0f;
    	temperature=voltage * 100.0f;
    	for(volatile int i=0; i<200000; i++); // small delay
    	printf("Room temperature: %d C\n", temperature);




    }

}


